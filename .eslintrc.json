{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
        "react/react-in-jsx-scope": 0,
        "react/button-has-type": 0,
        "class-methods-use-this": 0,
        "react/prop-types": 0, // temporary
        "object-curly-newline": 0
    }
}
